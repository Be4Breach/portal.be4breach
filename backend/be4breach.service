[Unit]
Description=Be4Breach FastAPI Backend
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/portal.be4breach/backend
EnvironmentFile=/home/ubuntu/portal.be4breach/backend/.env
ExecStart=/home/ubuntu/portal.be4breach/backend/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000 --workers 2
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=be4breach

[Install]
WantedBy=multi-user.target
